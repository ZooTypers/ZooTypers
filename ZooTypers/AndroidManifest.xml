<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zootypers"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.zootypers.TitlePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.zootypers.ZeroFeature"
            android:label="@string/title_activity_zero_feature" >
        </activity>
        <activity
            android:name="com.example.zootypers.SinglePlayer"
            android:label="@string/title_activity_single_player" >
        </activity>
        <activity
            android:name="com.example.zootypers.PreGameSelection"
            android:label="@string/title_activity_pre_game_selection" >
        </activity>
    </application>

</manifest>