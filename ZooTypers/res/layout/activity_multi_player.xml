<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiPlayer" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/start_time"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/word0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_circle"
            android:padding="10dp"
            android:text="6width"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp" >

        <TextView
            android:id="@+id/word1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_circle"
            android:padding="10dp"
            android:text="6width"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp" >

        <TextView
            android:id="@+id/word2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_circle"
            android:padding="10dp"
            android:text="6width"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp" >

        <TextView
            android:id="@+id/word3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_circle"
            android:padding="10dp"
            android:text="6width"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp" >

        <TextView
            android:id="@+id/word4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_circle"
            android:padding="10dp"
            android:text="6width"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/animal_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="60dp"
            android:contentDescription=""
            android:padding="0dp"
            android:src="@drawable/animal_elephant" />

        <TextView
            android:id="@+id/score_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/animal_image"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/your_score"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_prompt"
            android:gravity="center_horizontal"
            android:text="@string/default_score"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/typedError_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score"
            android:gravity="center_horizontal"
            android:text="@string/typedError_prompt"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/keyboard_open_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:onClick="keyboardButton"
            android:text="@string/toggle_keyboard"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/opp_animal_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="60dp"
            android:contentDescription=""
            android:padding="0dp" />

        <TextView
            android:id="@+id/opp_score_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/opp_animal_image"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/opponent_score"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/opp_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/opp_score_prompt"
            android:gravity="center_horizontal"
            android:text="@string/default_score"
            android:textSize="30sp" />

        <Button
            android:id="@+id/quit_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:onClick="goToTitlePage"
            android:text="@string/quit_game"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@color/white"
        android:padding="40sp"
        android:text="@string/game_over"
        android:textSize="30sp"
        android:visibility="invisible" />

</RelativeLayout>