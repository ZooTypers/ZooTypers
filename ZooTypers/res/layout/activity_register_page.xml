<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyish"
    android:orientation="vertical"
    tools:context=".RegisterPage" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/exit_login_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="cancel"
            android:padding="0sp"
            android:text="@string/x_string"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:text="@string/register_string"
            android:textSize="20sp" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/username_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="@string/username_string" />

    	<EditText
        	android:id="@+id/username_register_input"
        	android:layout_width="184dp"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:background="@color/white"
        	android:inputType="text" >
    	</EditText>
    </LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp" >
	    
	    <TextView
        	android:id="@+id/password_register"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:paddingLeft="20dp"
        	android:paddingRight="10dp"
        	android:text="@string/password_string" />

    	<EditText
        	android:id="@+id/password_input_register"
        	android:layout_width="184dp"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:background="@color/white"
        	android:inputType="textPassword" />
	
	</LinearLayout>
   
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
	    <TextView
	        android:id="@+id/confirm_password_register"
	        android:layout_width="wrap_content"
	        android:layout_height="44dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="10dp"
	        android:text="@string/confirm_pw_string" />

    	<EditText
        	android:id="@+id/confirm_password_input_register"
        	android:layout_width="184dp"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:layout_marginTop="10dp"
        	android:background="@color/white"
        	android:inputType="textPassword" />
	    
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	    <TextView
	        android:id="@+id/email_register"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingRight="38dp"
	        android:text="@string/email_string" />

	    <EditText
	        android:id="@+id/email_input_register"
	        android:layout_width="184dp"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:background="@color/white"
	        android:inputType="textEmailAddress" />

	</LinearLayout>

	<Button
	    android:id="@+id/submit_register"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="10dp"
	    android:onClick="submitRegister"
	    android:text="@string/submit_string" />
	
</LinearLayout>