<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePlayerGame" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:text="60" />

        <Button
            android:id="@+id/pause_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="pauseGame"
            android:text="@string/pause" />        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/word0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/oval_circle"
            android:padding="15dp"
            android:text="6width"
            android:textSize="20sp" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="90dp" >

         <TextView
             android:id="@+id/word1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
             android:background="@drawable/oval_circle"
             android:padding="15dp"
             android:text="6width"
            android:textSize="20sp" />

    </RelativeLayout>
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginTop="140dp" >

        <TextView
            android:id="@+id/word2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/oval_circle"
            android:padding="15dp"
            android:text="6width"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="190dp" >

        <TextView
            android:id="@+id/word3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/oval_circle"
            android:padding="15dp"
            android:text="6width"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginTop="240dp" >

        <TextView
            android:id="@+id/word4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/oval_circle"
            android:padding="15dp"
            android:text="6width"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/animal_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:contentDescription=""
            android:padding="0dp"
            android:src="@drawable/animal_elephant" />

        <TextView
            android:id="@+id/score_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/animal_image"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/score"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_prompt"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="30sp" />
		<TextView 
		    android:id="@+id/typedError_prompt"
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score"
            android:gravity="center_horizontal"
		    android:textColor="@color/red"
		    android:textSize="15sp"
		    android:visibility="invisible"
		    android:text="@string/typedError_prompt"/>
        <Button
            android:id="@+id/keyboard_open_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_marginBottom="10dp"
            android:onClick="keyboardButton"
            android:text="@string/toggle_keyboard"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>